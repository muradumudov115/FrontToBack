@{
    ViewData["Title"] = "ShowBasket";
    double Total = 0;
}

@if (Model.Count == 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Count</th>
                <th scope="col">Settings</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                double total = item.Price * item.Count;
                Total += total;
                <tr>
                    <th scope="row">
                        <img width="200px" height="200px" src="~/img/Section4/h3-team-img-1.png" />
                    </th>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Count</td>
                    <td><a asp-controller="basket" asp-action="Remove" asp-route-id="@item.Id"></a></td>
                    td
                    <td>x</td>
                </tr>
                <p>TotalPrice:@Total</p>
            }
        </tbody>
    </table>

}
else
	{
           <a asp-controller="home" asp-action="index">Go to Home</a>

	}
