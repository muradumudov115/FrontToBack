@model IEnumerable<Category>;
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Table</h4>
                <p class="card-description">
                    <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create category</a>
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Profile</th>
                                <th>VatNo.</th>
                                <th>Created</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    @*<td>@item.Description</td>*@
                                    <td>
                                        <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>

                                        <a asp-controller="Category" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>

                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="mdi mdi-account-remove"></i>
                                        </a>
                                    </td>
                                    
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
   </div>
