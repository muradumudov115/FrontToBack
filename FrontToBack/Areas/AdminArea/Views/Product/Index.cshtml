@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Table</h4>
                <p class="card-description">
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create Product</a>
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <img style="width:100px;height:100px;" src="~/img/@item.ImageUrl" alt="" />
                                </td>
                                <td>
                                    <p>@item.Name</p>
                                </td>
                                <td>
                                    <p>@item.Price</p>
                                </td>

                                <td>
                                    <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>

                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>

                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                        <i class="mdi mdi-account-remove"></i>
                                    </a>
                                </td>

                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



